'''{
  "manifest_version": 3,
  "name": "emoji",
  "version": "1.0",
  "description": "A simple example of a Chrome extension built with Manifest V3.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Click me!"
  },
  "permissions": ["storage", "offscreen", "scripting", "indexedDB"],
  "host_permissions": ["https://*.google.com/"],
  "background": {
    "service_worker": "background.js"
  },
  "offscreen": {
    "reasons": ["LOCAL_STORAGE"],
    "justification": "Keep data in sync between localStorage and chrome.storage",
    "path": "offscreen.html"
  },
  "content_scripts": [
    {
      "matches": ["<all-urls>"],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["picker.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
''
