{
  "manifest_version": 3,
  "name": "Emoji Extension - 表情管理扩展",
  "short_name": "表情扩展",
  "version": "1.0.0",
  "description": "一个功能强大的表情管理扩展，支持自定义表情分组、收藏夹、多平台导入（Bilibili/Tenor/Waline），以及在各大网站（Discord、Reddit、X、小红书等）快速插入表情。",
  "author": "stevessr",
  "homepage_url": "https://github.com/stevessr/bug-v3",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "optional_permissions": [
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html?mode=popup",
    "default_title": "表情管理",
    "default_icon": {
      "48": "img/48.png",
      "64": "img/64.png",
      "128": "img/128.png",
      "512": "img/512.png",
      "1000": "img/1000.png",
      "1200": "img/1200.jpg"
    }
  },
  "options_page": "index.html?mode=options",
  "options_ui": {
    "page": "index.html?mode=options",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "type": "module",
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "img/48.png",
    "64": "img/64.png",
    "128": "img/128.png",
    "512": "img/512.png",
    "1000": "img/1000.png",
    "1200": "img/1200.jpg"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "js/*",
        "*.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
