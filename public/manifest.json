{
  "manifest_version": 3,
  "name": "Emoji Extension",
  "version": "1.0.0",
  "description": "An emoji extension built with Vue 3 and Vite.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://linux.do/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "img/48.png",
      "64": "img/64.png",
      "128": "img/128.png",
      "512": "img/512.png",
      "1000": "img/1000.png",
      "1200": "img/1200.jpg"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://linux.do/*",
        "*://meta.discourse.org/*", 
        "*://*.discourse.org/*",
        "*://discuss.*/*",
        "*://community.*/*",
        "*://forum.*/*",
        "*://forums.*/*"
      ],
      "js": ["js/content.js"],
      "type": "module"
    }
  ],
  "icons": {
    "48": "img/48.png",
    "64": "img/64.png",
    "128": "img/128.png",
    "512": "img/512.png",
    "1000": "img/1000.png",
    "1200": "img/1200.jpg"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "js/*.css", "image-generator.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
