{
  "manifest_version": 3,
  "name": "Emoji Extension (Dev)",
  "version": "1.0.0",
  "description": "Development variant of the Emoji extension.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://linux.do/*",
    "http://localhost:5173/*"
  ],
  "action": {
    "default_popup": "popup-dev.html",
    "default_icon": {
      "48": "img/48.png",
      "64": "img/64.png",
      "128": "img/128.png",
      "512": "img/512.png",
      "1000": "img/1000.png",
      "1200": "img/1200.jpg"
    }
  },
  "options_page": "options-dev.html",
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-dev.js"],
      "type": "module"
    }
  ],
  "icons": {
    "48": "img/48.png",
    "64": "img/64.png",
    "128": "img/128.png",
    "512": "img/512.png",
    "1000": "img/1000.png",
    "1200": "img/1200.jpg"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "js/*.css", "js/*.js", "image-generator.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "_development_variant": true
}
