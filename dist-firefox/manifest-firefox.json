{
  "manifest_version": 3,
  "name": "Emoji Extension",
  "version": "1.0.0",
  "description": "An emoji extension built with Vue 3 and Vite.",
  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "cookies"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "img/48.png",
      "64": "img/64.png",
      "128": "img/128.png",
      "512": "img/512.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["js/polyfill.js", "js/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/polyfill.js", "js/content.js"]
    }
  ],
  "icons": {
    "48": "img/48.png",
    "64": "img/64.png",
    "128": "img/128.png",
    "512": "img/512.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "js/*", "*.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{emoji-extension@example.com}",
      "strict_min_version": "109.0"
    }
  }
}